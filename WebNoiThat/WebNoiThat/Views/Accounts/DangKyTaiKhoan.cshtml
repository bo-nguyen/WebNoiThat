@model WebNoiThat.ModelViews.RegisterVM

@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" style="height:150px;background-color:#E3F0E1">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 style="font-family:Verdana" class="breadcrumb-heading">Đăng ký</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-3 pt-10 pt-lg-0">
                    <form asp-action="DangKyTaiKhoan">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="login-form">
                            <h4 style="font-family:Verdana" class="login-title">Đăng ký</h4>
                            <div class="row">
                                <div class="col-md-12">
                                    <label>Họ tên*</label>
                                    <input asp-for="FullName" type="text" placeholder="Họ tên">
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label>Email*</label>
                                    <input asp-for="Email" type="email" placeholder="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label>Số điện thoại*</label>
                                    <input asp-for="Phone" type="tel" placeholder="Số điện thoại">
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Mật khẩu*</label>
                                    <input asp-for="Password" type="password" placeholder="Mật khẩu">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Nhập lại mật khẩu*</label>
                                    <input asp-for="ConfirmPassword" type="password" placeholder="Nhập lại mật khẩu">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <div class="row align-items-center justify-content-center text-center">
                                        <div class="col-12 mb-3">
                                            <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0 w-100">Đăng ký</button>
                                        </div>
                                        <div class="col-12">
                                            <hr class="my-3">
                                            <div class="d-flex align-items-center justify-content-center">
                                                <span class="me-2">Bạn đã có tài khoản?</span>
                                                <a href="@Url.Action("DangNhap", "Accounts")"
                                                   class="btn btn-custom-size btn-secondary btn-primary-hover rounded-0">
                                                    Đăng nhập
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/1.1.9/js/libs/jquery-1.10.2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}
